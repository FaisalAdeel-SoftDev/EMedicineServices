
@{
    ViewData["Title"] = "login";
}


<div class="row" >
    <div class="col-md-4"></div>
    <div class="col-md-4 mt-5 p-5" style="border:1px solid grey;height:400px; border-radius:5px; box-shadow:5px 5px rgba(0, 0, 0, 0.5); background-color:black;color:white">
        <h1>Login</h1>
        <form asp-controller="login" asp-action="login" method="post">
            <div class="form-group">
                <label class="control-label">User Name</label>
                <input type="text" Name="Name"  required class="form-control" />
                
            </div>
            <div class="form-group">
                <label class="control-label">Password</label>
                <input type="password" Name="Password"  required class="form-control" />
               
            </div>
            <div class="form-group">
                <input type="submit" value=" Login " class="btn btn-info mt-3 p" style="color:white"/>
                <a asp-controller="User" asp-action="Register" class="btn btn-info mt-3" style="color:white">Register</a>
            </div>
        </form>
       
    </div>
    <div class="col-md-4"></div>
</div>
