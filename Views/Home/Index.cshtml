@* My med section *@
<section class="health_section layout_padding" style="margin-top:0;padding-top:0">
    <h2 class="text-uppercase" style="text-align:center;background-color:#10e7f4;color:white; margin-bottom:40px;">
        Medicines

    </h2>
    <div class="row">
        <div class="col-md-6 col-lg-8"></div>
        
        <div class="col-md-4 col-lg-3" >
            <form class="form-inline" asp-controller="Home" asp-action="Index" method="get">
                <div class="input-group">
                    <input type="text" name="query" class="form-control" placeholder="Search..." aria-label="Search input">
                    <div class="input-group-append">
                        <button class="btn btn-info" type="submit" style="color:white">Search</button>
                    </div>
                </div>

            </form>
        </div>
        <div class="col-md-2 col-lg-1"></div>
    </div>
   
<div class="row">


        @{
            foreach (var item in Model)
            {
                <div class="col-md-5 col-lg-3" >


                    <div class="item">
                        <div class="box">
                            <div class="btn_container">
                                @if (item.Quantity > 0 && item.ExpiryDate > DateTime.Now)
                                {
                                    <a asp-controller="Order" asp-action="Placeorder" asp-route-id="@item.Id">
                                        Buy Now
                                    </a>
                                }
                                else
                                {
                                    <a href="#">
                                        Out of Stock
                                    </a>
                                }
                            </div>
                <div class="img-box">
                        <img src=@Url.Content(item.ImagePath) alt="">
                </div>
                <div class="detail-box">

                    <div class="text">
                        <h6>
                           @item.Name
                        </h6>
                        <h6 class="price">
                            <span>
                                PKR
                            </span>
                            @item.Price
                        </h6>
                    </div>
                </div>
            </div>

        </div>




    </div>
               <div class="col-md-1 col-lg-1 "></div>
    }
    }

    


   
    </div>

    </section>


<div class="row" style="margin-top:40px">
<div class="col-md-5"></div>
<div class="col-md-2">
    <nav aria-label="Page navigation">
        <ul class="pagination">
            @if (ViewBag.HasPrevious)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("Index","Home", new { pageNumber = ViewBag.PageNumber - 1, pageSize = ViewBag.PageSize })" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>
            }
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(i == ViewBag.PageNumber ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index","Home", new { pageNumber = i, pageSize = ViewBag.PageSize })">@i</a>
                </li>
            }
            @if (ViewBag.HasNext)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("Index","Home", new { pageNumber = ViewBag.PageNumber + 1, pageSize = ViewBag.PageSize })" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>
            }
        </ul>
    </nav>
</div>
    <div class="col-md-5"></div>


</div>














